#include <stdio.h>
int main() {
 int n, i;
 int sum = 0;
 printf("Enter the number of elements in the array: ");
 scanf("%d", &n);
 if (n <= 0) {
 printf("Error: The number of elements must be positive.\n");
 return 1;
 }
 int arr[n];
 printf("Enter %d elements:\n", n);
 for (i = 0; i < n; i++) {
 scanf("%d", &arr[i]);
 }
 for (i = 0; i < n; i++) {
 sum += arr[i];
 }
 printf("The sum of the array elements is: %d\n", sum);
 return 0;
}
